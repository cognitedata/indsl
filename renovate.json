{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>cognitedata/renovate-config-public",
    ":automergeMinor"
  ],
  "ignorePaths": [],
  "minimumReleaseAge": "31 days",
  "labels": [
    "dependencies",
    "auto-merge"
  ],
  "packageRules": [
    {
      "groupName": "commitizen",
      "matchPackageNames": ["commitizen", "commitizen-tools/commitizen"],
      "matchDatasources": ["pypi", "github-tags"]
    }
  ]
}
