{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>cognitedata/renovate-config-public",
    ":automergeMinor"
  ],
  "ignorePaths": [],
  "rangeStrategy": "bump",
  "minimumReleaseAge": "31 days",
  "labels": [
    "dependencies",
    "auto-merge"
  ],
  "packageRules": [
    {
      "description": "Bump dev dependency constraints to keep pyproject.toml in sync with poetry.lock",
      "matchManagers": ["poetry"],
      "matchDepTypes": ["dev-dependencies"],
      "rangeStrategy": "bump"
    }
  ]
}
